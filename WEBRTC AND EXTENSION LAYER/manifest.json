{
  "manifest_version": 3,
  "name": "Real-Time Deepfake Guard (Prototype)",
  "version": "0.1",
  "description": "Detect potential deepfake video in live WebRTC calls (prototype).",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
